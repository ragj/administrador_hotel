				<a href="/bali/en/experience/{{uri}}" style="text-decoration: none;">
					<div class="tour">
						<h1>{{type.type}}</h1>
						<img src="/bali/assets/img/experience/indo/{{thumbnail}}">
						<h2>{{title}}</h2>
						<h3>{{duration}}</h3>
						<p>{{description}}</p>
						<a href="">More [+]</a>
					</div>
				</a>
			{{/ tour}}
		</blocks>
	</div>
	{{$ scripts}}
        <script type="text/javascript">
        	var sliderTimer = setInterval( next , 3000);
        	function next( clear ){
        		if( $(".slider .slide:visible").next().is(".slide") ){
        			$(".slider .slide:visible").fadeOut()	
        			$(".slider .slide:visible").next().fadeIn();
        		}else{
        			$(".slider .slide:visible").fadeOut()	
        			$(".slider .slide").first().fadeIn();
        		}
        		if( clear ){
        			clearInterval(sliderTimer);
        			sliderTimer = setInterval( next , 3000);
        		}
        	}

        	function prev( clear ){
        		if( $(".slider .slide:visible").prev().is(".slide") ){
        			$(".slider .slide:visible").fadeOut()	
        			$(".slider .slide:visible").prev().fadeIn();
        		}else{
        			$(".slider .slide:visible").fadeOut()	
        			$(".slider .slide").last().fadeIn();
        		}
        		if( clear ){
        			clearInterval(sliderTimer);
        			sliderTimer = setInterval( next , 3000);
        		}
        	}
        </script>
    {{/ scripts}}
	{{/content}}
{{/ panel}}