{{% BLOCKS }}
{{< panel_esp}}
	{{$header}}
	{{/header}}
	{{$content}}
		<div class="fit contact">
			<row>
				<column	cols="1">
				</column>
				<column	cols="4">
					<div class="element contact">
						<form action="/bali/contact-us" method="post" class="forms">
							<h1>Contáctanos</h1>
							<section>
								<label>
									Nombre
								</label>
								<input name="name" type="text" required="true"/>
							</section>
							<section>
								<label>
									Email
								</label>
								<input name="email" type="email" required="true"/>
							</section>
							<section>
								<label>
									Mensaje
								</label>
								<textarea name="message" required="true"></textarea>
							</section>
							<section>
								<label>
									<input type="checkbox" name="a" required="true"> Acepto aviso de privacidad.
								</label>
							</section>
							<section>
								<button type="primary">Enviar</button> 
							</section>
						</form>
					</div>
				</column>
				<column	cols="6">
					<p class="intro"><b>Lozano Travel Bali</b> es el DMC (Destination Management Company) de Lozano Travel, una agencia de viajes Virtuoso, operando a lo largo de 33 años con sede en la Ciudad de México y su casa matriz en Laredo Texas.</p>
				</column>
			</row>
		</div>
	{{/content}}
{{/ panel_esp}}