{{% BLOCKS }}
{{< panel}}
	{{$content}}

	<div class="holder">
		<script>
			var path = "";
			var href = window.location.pathname
			var s = href.split("/");
			for (var i=2;i<(s.length-1);i++) {
				path+="<A HREF=\""+href.substring(0,href.indexOf("/"+s[i])+s[i].length+1)+"/\">"+s[i]+"</A> / ";
			}
			i=s.length-1;
			path+="<A HREF=\""+href.substring(0,href.indexOf(s[i])+s[i].length)+"\">"+s[i]+"</A>";
			var url = "<p id=bread>"+path+"</p>";
			document.writeln(url);
	 	</script>
	 	<row>
				<column	cols="3">
					<p class="intro"><b>Register</b></p><br>
					<p class="detail"><b>Please fill the following form fields. Thanks</b></p>
				</column>
				<column	cols="8">
					<div class="element">
						<form action="/bali/register" method="post" class="forms">
							<section>
								<label>
									First Name
								</label>
								<input name="name" type="text" required value="{{#user}}{{nombre}}{{/user}}"/>
							</section>
							<section>
								<label>
									Last Name
								</label>
								<input name="lname" type="text" required value="{{#user}}{{app}}{{/user}}"/>
							</section>
							<section>
								<label>
									Mother's Last Name
								</label>
								<input name="mlname" type="text" required value="{{#user}}{{apm}}{{/user}}"/>
							</section>
							<section>
								<label>
									Email (username)
								</label>
								<input name="user" type="text" required value="{{#user}}{{usr}}{{/user}}"/>
							</section>
							<section>
								<label>
									Password
								</label>
								<input name="pass" type="password" required/>
							</section>
							<section>
								<label>
									Confirm Password
								</label>
								<input name="pass1" type="password" required/>
							</section>
							<section>
								<label>
									Phone Number
								</label>
								<input name="phone" type="text" required value="{{#user}}{{tel}}{{/user}}"/>
							</section>
							<section>
								<label>
									IATA
								</label>
								<input name="iata" type="text" required value="{{#user}}{{iata}}{{/user}}"/>
							</section>
							<section>
								<label>
									Member to an Affiliation or Program
								</label>
								<input name="member" type="text" required value="{{#user}}{{miembro}}{{/user}}"/>
							</section>
							<section>
								<label>
									Years in Business
								</label>
								<input name="years" type="text" required value="{{#user}}{{anios}}{{/user}}"/>
							</section>
							<section>
								<input type="submit" class="primary" value="Register"/>
							</section>
						</form>
					</div>
				</column>
			</row>
	</div>	

	
	{{/content}}
	{{$ scripts}}
		
    {{/ scripts}}
{{/ panel}}