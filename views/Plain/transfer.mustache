{{% BLOCKS }}
{{< panel}}
	{{$content}}
	<img src="/bali/assets/img/Travel_agent.jpg">
	
	<div class="holder transfer tabs">
		<script>
			var path = "";
			var href = window.location.pathname
			var s = href.split("/");
			for (var i=3;i<(s.length-1);i++) {
				path+="<A HREF=\""+href.substring(0,href.indexOf("/"+s[i])+s[i].length+1)+"/\">"+s[i]+"</A> / ";
			}
			i=s.length-1;
			path+="<A HREF=\""+href.substring(0,href.indexOf(s[i])+s[i].length)+"\">"+s[i]+"</A>";
			var url = "<p id=bread>" + path+"</p>";
			document.writeln(url);
	 	</script>
		
	 	<div class="tabs">
	 		<a href="javascript:void(0);" class="actve" onclick="changeTab( this , '.trasfer-travel' )">
	 			TRANSFERS
	 		</a>
	 		<a href="javascript:void(0);"  id="experiences" onclick="changeTab( this , '.experiences-travel' )">
	 			EXPERIENCES
	 		</a>
	 		<a href="javascript:void(0);"  id="hotels" onclick="changeTab( this , '.hoteles-travel' )">
	 			HOTELS
	 		</a>
	 	</div>
		 	<div class="hoteles-travel ttrl">
		 		<br>
		 		<br>
		 		<center>
		 			<button type="button" onclick="window.location.href='/bali/en/request'">REQUEST / INQUIRE</button>
				</center>
				<br>
		 		<br>
			 	<blocks cols="3">
			 			{{#hotelBlock}}
			 				<div class="tour hotel">
								<a href="/bali/en/travelAgent/{{uri}}" style="text-decoration: none;">
									<h1>{{hotel.name}}</h1>
									<img src="/bali/assets/img/hotel-thumb/{{hotel.thumbnail}}">
								</a>	
							</div>
			 			{{/hotelBlock}}
				</blocks>
		 	</div>
		 	<div class="trasfer-travel ttrl">
				<div class="aux">
			 		<div class="{{tipo}}">
				 		<h1>
				 			{{en}}
				 			<span>Prices are NETT per person in USD and non commisionable</span>
				 		</h1>
				 		<center>
				 			<button type="button" onclick="window.location.href='/bali/en/request'">REQUEST / INQUIRE</button>
				 		</center>
				 		<br>
				 		<table>
							<tr class="main">
								<td>Description</td>
								{{#car}}
									<td colspan="{{size}}" class="data">{{name}}</td>
								{{/car}}
							</tr>
							<tr>
								<td>Passengers</td>
								{{#car}}
									{{#passengers}}
										<td class="data">{{np_initial}}{{#np_final}} - {{np_final}}{{/np_final}}</td>
									{{/passengers}}
								{{/car}}
							</tr>
							{{# ttransfer}}
								<tr>
									<td>{{den}}</td>
									{{#values}}
										<td class="data">{{val}}</td>
									{{/values}}
								</tr>
							{{/ ttransfer}}
						</table>
						{{#tRate}}
							<h2>{{title}}</h2>
							{{{content}}}
						{{/tRate}}	
					</div>
				</div>
				<h1> Gallery </h1>
