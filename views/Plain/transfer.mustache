{{% BLOCKS }}
{{< panel}}
	{{$content}}
	<img src="/bali/assets/img/transfers/transfers_pleca.jpg">
	
	<div class="holder transfer">
		<script>
					var path = "";
					var href = window.location.pathname
					var s = href.split("/");
					for (var i=3;i<(s.length-1);i++) {
						path+="<A HREF=\""+href.substring(0,href.indexOf("/"+s[i])+s[i].length+1)+"/\">"+s[i]+"</A> / ";
					}
					i=s.length-1;
					path+="<A HREF=\""+href.substring(0,href.indexOf(s[i])+s[i].length)+"\">"+s[i]+"</A>";
					var url = "<p id=bread>" + path+"</p>";
					document.writeln(url);
	 	</script>
	 	{{# transferBlock }}
	 		<h1>
	 			{{TransferBlockTitle}}
	 			<span>Transfer prices per person in USD</span>
	 		</h1>
	 		<table>
				<tr class="main">
					<td>Description</td>
					<td colspan="2" class="data">INNOVA SUV</td>
					<td colspan="2" class="data">HIACE VAN</td>
					<td colspan="2" class="data">ALPHARD/MERCY E 200</td>
				</tr>
				<tr>
					<td>passengers</td>
					<td class="data">1</td>
					<td class="data">2 - 4</td>
					<td class="data">5 - 7</td>
					<td class="data">8 - 10 
					<td class="data"> 1 </td>
					<td class="data"> 2 - 4 </td>
				</tr>
			{{# detail }}
				<tr>
					<td>{{ td_description }}</td>
					<td class="data">{{ td_innova_sub_1 }}</td>
					<td class="data">{{ td_innova_sub_2_4 }}</td>
					<td class="data">{{ td_hiace_val_5_7 }}</td>
					<td class="data">{{ td_hiace_val_8_10 }}</td>
					<td class="data">{{ td_alphard_mercy_1 }}</td>
					<td class="data">{{ td_alphard_mercy_2_4 }}</td>
				</tr>
			{{/ detail }}
			</table>
			<h2>Transfer rates includes :</h2>
			Driver, Gasoline, Parking.
			<br>Spanish / English speaking guide
			<br>Insurance
			<br>Refreshing towel
			<br>Wi-fi connection in the car		
	 	{{/ transferBlock }}
