{{% BLOCKS }}
	{{< admin }}
		{{$ title}}
			Agregar Hotel - Bali
		{{/ title}}
		{{$ content }}
			<div class="row">
		        <div class="col-lg-12">
		            <h1 class="sub-header">Agregar un Hotel</h1>
		        </div>
		    </div>
			<div class="row centrado">
		    	<div class="col-lg-8">
		        	<div class="panel panel-default">
		            	<div class="panel-heading">
		                	Agregar Hotel
		            	</div>
		            	<div class="panel-body">
		                	<div class="row">
		                    	<div class="col-lg-12">
		                        	<form role="form" action="/panel/tour/add" method="post" name="newHotel">
		                            	<div class="form-group"> 
		                                	<input class="form-control" placeholder="Nombre" name="name">
		                            	</div>
		                            	<div class="form-group"> 
		                                	<input class="form-control" placeholder="Dirección" name="address">
		                            	</div>
		                            	<div class="form-group"> 
		                                	<input class="form-control" placeholder="Web Site" name="website">
		                            	</div>
		                            	<div class="form-group"> 
		                                	<input class="form-control" placeholder="URL Mapa" name="map">
		                            	</div>
		                            	<div class="form-group"> 
		                                	<input class="form-control" placeholder="Teléfono" name="tel">
		                            	</div>
		                            	<div class="form-group"> 
		                                	<input class="form-control" placeholder="Correo" name="email">
		                            	</div>
		                            	<div class="form-group">
		                                	<label>Descripción:</label>
		                                	<textarea class="form-control" name="descripcion"></textarea>
		                            	</div>
		                            	<div class="form-group"> 
		                                	<input type="file"name="thumbnail">
									        <span class="help-block">Imagen en tamaño THUMBNAIL (000px*000px)</span>
		                            	</div>
		                            	<input type="submit" class="btn btn-primary" value="Guardar">
		                        	</form>
		                    	</div>
		                	</div>
		                	<!-- /.row (nested) -->
		            	</div>
		            	<!-- /.panel-body -->
		        	</div>
		        	<!-- /.panel -->
		    	</div>
		    <!-- /.col-lg-12 -->
			</div>
		{{/ content}}
		{{$ footerscripts }}
		{{/ footerscripts }}
	{{/ admin }}