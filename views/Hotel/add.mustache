      												<input class="form-control" placeholder="URL Mapa" name="map">
    											</div>
  											</div>
  											<div class="form-group">
    											<label class="control-label col-sm-3" for="tel">Teléfono:</label>
    											<div class="col-sm-8">
      												<input class="form-control" placeholder="Teléfono" name="tel">
    											</div>
  											</div>
  											<div class="form-group">
    											<label class="control-label col-sm-3" for="email">Email:</label>
    											<div class="col-sm-8">
      												<input class="form-control" placeholder="Correo" name="email">
    											</div>
  											</div>
  											<div class="form-group">
    											<label class="control-label col-sm-3" for="map">Descripción:</label>
    											<div class="col-sm-8">
      												<textarea class="form-control" name="descripcion"></textarea>
    											</div>
  											</div>
