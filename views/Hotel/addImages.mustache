{{% BLOCKS }}
	{{< admin }}
		{{$ title}}
			Agregar Imagen Hotel - Bali
		{{/ title}}
		{{$ content }}
			<div id="page-content-wrapper">
            	<div class="container-fluid">
					<div class="row">
				        <div class="col-lg-12">
				            <h1 class="page-header">Agregar Imagen a Hotel</h1>
				        </div>
				    </div>
					<div class="row">
				    	<div class="col-lg-12">
				        	<div class="panel panel-default">
				            	<div class="panel-heading">
				                	Agregar Imagen a Hotel
				            	</div>
				            	<div class="panel-body">
				                	<div class="row">
				                    	<div class="col-lg-12">
				                        	<form role="form" action="/panel/hotel/addImages" method="post" name="newImageTour" enctype="multipart/form-data">		                            	
				                            	<div class="form-group">
				                            		<label>Hotel:</label>
				                            		<select name="hotel">
				                            			<option value="">Selecciona un Hotel</option>
				                            			{{#hotel}}
				                            				<option value="{{id}}">{{name}}</option>
														{{/hotel}}
													</select>
				                            	</div>
				                            	<div class="form-group"> 
				                                	<input type="file"name="imagen">
											        <span class="help-block">Imagen</span>
				                            	</div>
				                            	<input type="submit" class="btn btn-primary" value="Guardar">
				                        	</form>
				                    	</div>
				                	</div>
				                	<!-- /.row (nested) -->
				            	</div>
				            	<!-- /.panel-body -->
				        	</div>
				        	<!-- /.panel -->
				    	</div>
				    <!-- /.col-lg-12 -->
					</div>
				</div>
			</div>
		{{/ content}}
		{{$ footerscripts }}
		{{/ footerscripts }}
	{{/ admin }}