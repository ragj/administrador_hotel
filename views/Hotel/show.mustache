{{$ content }}
<h2 class="sub-header">Hoteles</h2>
<div class="table-responsive">
    <form class="form-inline" id="bootpag_text_count">
        <div class="form-group">
            <label for="exampleInputName2">Mostrar &nbsp;</label>
            <select id="bootpag_text_count_select" class="form-control input-sm">
                <option value="5">5</option>
                <option value="10">10</option>
                <option value="25">25</option>
                <option value="50">50</option>
                <option value="100">100</option>
            </select>
            <label for="exampleInputName2">&nbsp; Registros</label>
        </div>
    </form>
    <table class="table table-striped isdatatable">
        <thead>
        <tr>
            <th>Nombre</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {{# hoteles }}
            <tr>
                <td>{{nombre}}</td>
                <td style="text-align: right">
                    <a href="/panel/usuarios/eliminar/{{id}}">
                        <button type="button" class="btn btn-danger">
                            <span class="glyphicon glyphicon-trash" aria-hidden="true"></span> Eliminar
                        </button>
                        &nbsp;
                    </a>
                    <a href="/panel/usuarios/editar/{{id}}">
                        <button type="button" class="btn btn-primary">
                            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Editar
                        </button>
                    </a>
                </td>
            </tr>
        {{/ users }}
        </tbody>
    </table>
    <div class="col-md-6"><p id="bootpag_text">Mostrando registros del <b>{{ini}}</b> al <b>{{end}}</b> de un total de
        <b>{{count}}</b> registros</p></div>
    <div class="col-md-6"><p id="bootpag_pag" data-count="{{count}}"></p></div>
</div>

{{/ content}}
