{{% BLOCKS }}
	{{< admin }}
		{{$ title}}
			Editar Imagen Hotel - Bali
		{{/ title}}
		{{$ content }}
			<div id="page-content-wrapper">
            	<div class="container-fluid">
					<div class="row">
				        <div class="col-lg-12">
				            <h1 class="page-header">Editar Imagen Hotel</h1>
				        </div>
				    </div>
				    <div class="row">
				    	<div class="col-lg-12">
				        	<div class="panel panel-default">
				            	<div class="panel-heading">
				                	Editar Imagen Hotel
				            	</div>
				            	<div class="panel-body">
				                	<div class="row">
				                    	<div class="col-lg-12">
				                    		{{# image}}
					                        	<form role="form" action="/panel/hotel/editImages/{{id}}" method="post" name="newImageTour" enctype="multipart/form-data">		                            	
					                            	<div class="form-group">
					                            		<label>Imagen Actual:</label><br>
					                            		{{# hotel}}
					                            			<p>{{name}}</p>
					                            		{{/ hotel}}
					                            		
					                            			<img src="/assets/img/hotel/{{id_hotel}}/{{url}}">
					      								
					                            	</div>
					                            	<div class="form-group"> 
					                                	<input type="file"name="imagen">
												        <span class="help-block">Imagen</span>
					                            	</div>
					                            	<input type="submit" class="btn btn-primary" value="Guardar">
					                        	</form>
				                        	{{/ image}}
				                    	</div>
				                	</div>
				                	<!-- /.row (nested) -->
				            	</div>
				            	<!-- /.panel-body -->
				        	</div>
				        	<!-- /.panel -->
				    	</div>
				    <!-- /.col-lg-12 -->
					</div>
				</div>
			</div>
		{{/ content}}
		{{$ footerscripts }}
		{{/ footerscripts }}
	{{/ admin }}