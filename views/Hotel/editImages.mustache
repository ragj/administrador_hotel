{{% BLOCKS }}
	{{< quirk }}
		{{$ title}}
            Edit Hotel Image
        {{/ title}}
        {{$ content }}
    		<div class="contentpanel">
    			<ol class="breadcrumb breadcrumb-quirk">
			        <li><a href=""><i class="fa fa-home mr5"></i>Hotel</a></li>
			        <li class="active">Editar Imagen de Hotel</li>
      			</ol>
      			{{# hotel }}
	    			<div class="row">
	    				<div class="col-md-8 col-md-offset-2">
		        			<div class="panel">
		        				<div class="panel-heading">
		        					<h4 class="panel-title">Editar Imagen de Hotel</h4>
		        				</div>
			        			<div class="panel-body">
			        				<hr>
			        				{{# image}}			
				        				<form class="form-horizontal" action="/bali/panel/hotel/editImages/{{id}}" method="post" name="newHotel" enctype="multipart/form-data" class="form-horizontal">
				        					<div class="form-group">
				                    			<label class="col-sm-3 control-label">Imagen Actual:</label>
				                    			<div class="col-sm-6">
				                      				{{# hotel}}
					                            		<p>{{name}}</p>
					                            	{{/ hotel}}
					                            	<img src="/bali/assets/img/hotel/{{id_hotel}}/{{url}}" style="width:500px; height: 300px;">
				                    			</div>
				                  			</div>
				                  			<div class="form-group">
				                    			<label class="col-sm-3 control-label">Imagen:</label>
				                    			<div class="col-sm-6">
				                     				<input type="file"name="imagen">
												    <span class="help-block">Imagen</span>
				                    			</div>
				                  			</div>
				                  			<div class="row">
			                    				<div class="col-sm-9 col-sm-offset-8">
							                      <button class="btn btn-success btn-quirk btn-wide mr5">Guardar</button>
			                    				</div>
		                  					</div>
			                  				
				        				</form>
			        				{{/ image}}
			        			</div>
		        			</div>
	        			</div>
	    			</div>
	    		{{/ hotel }}	
	    	</div>
        {{/ content }}
		{{$ scripts }}
		{{/ scripts }}
	{{/ quirk }}