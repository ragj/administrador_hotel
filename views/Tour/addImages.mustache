{{% BLOCKS }}
	{{< quirk }}
		{{$ title}}
            Add Tour Image
        {{/ title}}
		{{$ content }}
			<div class="contentpanel">
    			<ol class="breadcrumb breadcrumb-quirk">
			        <li><a href=""><i class="fa fa-home mr5"></i>Experiencia</a></li>
			        <li class="active">Agregar Imagen a Experiencia</li>
      			</ol>
    			<div class="row">
    				<div class="col-md-6 col-md-offset-3">
	        			<div class="panel">
	        				<div class="panel-heading">
	        					<h4 class="panel-title">Formulario Imagen Experiencia</h4>
	        				</div>
		        			<div class="panel-body">
		        				<hr>			
		        				<form class="form-horizontal" action="/panel/tour/addImages" method="post" name="newHotel" enctype="multipart/form-data" class="form-horizontal">
		        					<div class="form-group">
		                    			<label class="col-sm-3 control-label">Experiencia: <span class="text-danger">*</span></label>
		                    			<div class="col-sm-6">
		                      				<select name="exper">
				                            	<option value="">Selecciona un Hotel</option>
					                            {{#tour}}
					                            	<option value="{{id}}">{{title}}</option>
												{{/tour}}
											</select>
		                    			</div>
		                  			</div>
		                  			<div class="form-group">
		                    			<label class="col-sm-3 control-label">Imagen:</label>
		                    			<div class="col-sm-6">
		                     				<input type="file"name="imagen">
											<span class="help-block">Imagen</span>
		                    			</div>
		                  			</div>
		                  			<hr>
		                  			<div class="row">
	                    				<div class="col-sm-9 col-sm-offset-8">
					                      <button class="btn btn-success btn-quirk btn-wide mr5">Guardar</button>
	                    				</div>
	                  				</div>
		        				</form>
		        			</div>
	        			</div>
        			</div>
    			</div>	
    		</div>
		{{/ content}}
		{{$ footerscripts }}
		{{/ footerscripts }}
	{{/ quirk }}