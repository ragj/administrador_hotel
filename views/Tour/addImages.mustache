{{% BLOCKS }}
	{{< admin }}
		{{$ title}}
			Agregar Imagen Experiencia - Bali
		{{/ title}}
		{{$ content }}
			<div class="row">
		        <div class="col-lg-12">
		            <h1 class="page-header">Agregar Imagen a Experiencia</h1>
		        </div>
		    </div>
			<div class="row">
		    	<div class="col-lg-12">
		        	<div class="panel panel-default">
		            	<div class="panel-heading">
		                	Agregar Imagen a Experiencia
		            	</div>
		            	<div class="panel-body">
		                	<div class="row">
		                    	<div class="col-lg-12">
		                        	<form role="form" action="/panel/tour/addImages" method="post" name="newImageTour" enctype="multipart/form-data">		                            	
		                            	<div class="form-group">
		                            		<label>Experiencia:</label>
		                            		<select name="exper">
		                            			<option value="">Selecciona una Experiencia</option>
		                            			{{#tour}}
		                            				<option value="{{id}}">{{title}}</option>
												{{/tour}}
											</select>
		                            	</div>
		                            	<div class="form-group"> 
		                                	<input type="file"name="imagen">
									        <span class="help-block">Imagen</span>
		                            	</div>
		                            	<input type="submit" class="btn btn-primary" value="Guardar">
		                        	</form>
		                    	</div>
		                	</div>
		                	<!-- /.row (nested) -->
		            	</div>
		            	<!-- /.panel-body -->
		        	</div>
		        	<!-- /.panel -->
		    	</div>
		    <!-- /.col-lg-12 -->
			</div>
		{{/ content}}
		{{$ footerscripts }}
		{{/ footerscripts }}
	{{/ admin }}