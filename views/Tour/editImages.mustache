{{% BLOCKS }}
	{{< admin }}
		{{$ title}}
			Editar Imagen Experiencia - Bali
		{{/ title}}
		{{$ content }}
			<div class="row">
		        <div class="col-lg-12">
		            <h1 class="page-header">Editar Imagen Experiencia</h1>
		        </div>
		    </div>
		    <div class="row">
		    	<div class="col-lg-12">
		        	<div class="panel panel-default">
		            	<div class="panel-heading">
		                	Editar Imagen Experiencia
		            	</div>
		            	<div class="panel-body">
		                	<div class="row">
		                    	<div class="col-lg-12">
		                    		{{# image}}
			                        	<form role="form" action="/panel/tour/editImages/{{id}}" method="post" name="newImageTour" enctype="multipart/form-data">		                            	
			                            	<div class="form-group">
			                            		<label>Imagen Actual:</label><br>
			                            		{{# tour}}
			                            			<p>{{title}}</p>
			                            		{{/ tour}}
			                            		
			                            			<img src="/assets/img/experience/{{url}}">
			      								
			                            	</div>
			                            	<div class="form-group"> 
			                                	<input type="file"name="imagen">
										        <span class="help-block">Imagen</span>
			                            	</div>
			                            	<input type="submit" class="btn btn-primary" value="Guardar">
			                        	</form>
		                        	{{/ image}}
		                    	</div>
		                	</div>
		                	<!-- /.row (nested) -->
		            	</div>
		            	<!-- /.panel-body -->
		        	</div>
		        	<!-- /.panel -->
		    	</div>
		    <!-- /.col-lg-12 -->
			</div>
		{{/ content}}
		{{$ footerscripts }}
		{{/ footerscripts }}
	{{/ admin }}