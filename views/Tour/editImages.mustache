{{% BLOCKS }}
	{{< quirk }}
		{{$ title}}
			 Edit Experience Image
		{{/ title}}
		{{$ content }}
			<div class="contentpanel">
    			<ol class="breadcrumb breadcrumb-quirk">
			        <li><a href=""><i class="fa fa-home mr5"></i>Experience</a></li>
			        <li class="active">Edit Experience Image</li>
      			</ol>
      			{{# tour }}
	    			<div class="row">
	    				<div class="col-md-10 col-md-offset-1">
		        			<div class="panel">
		        				<div class="panel-heading">
		        					<h4 class="panel-title">Edit Experience Image</h4>
		        				</div>
			        			<div class="panel-body">
			        				<hr>
			        				{{# image}}			
				        				<form class="form-horizontal" action="/bali/panel/tour/editImages/{{idexperienceImages}}" method="post" name="newHotel" enctype="multipart/form-data" class="form-horizontal">
				        					<div class="form-group">
				                    			<label class="col-sm-3 control-label">Actual Image:</label>
				                    			<div class="col-sm-6">
				                    				{{# tour }}
					                            		<p>{{title}}</p>
				                    				{{/ tour }}
				                    				<img src="{{thumb}}{{path}}" style="width:500px; height: 300px;">
				                    			</div>
				                  			</div>
				                  			<div class="form-group">
				                    			<label class="col-sm-3 control-label">Image:</label>
				                    			<div class="col-sm-6">
				                     				<input type="file"name="imagen">
												    <span class="help-block">Image</span>
				                    			</div>
				                  			</div>
				                  			<div class="row">
			                    				<div class="col-sm-9 col-sm-offset-8">
							                      <button class="btn btn-success btn-quirk btn-wide mr5">Save</button>
			                    				</div>
		                  					</div>
			                  				
				        				</form>
			        				{{/ image}}
			        			</div>
		        			</div>
	        			</div>
	    			</div>
	    		{{/ tour }}	
	    	</div>
		{{/ content}}
		{{$ scripts }}
		{{/ scripts }}
	{{/ quirk }}