{{% BLOCKS }}
	{{< admin }}
		{{$ title}}
			Editar Experiencia - Bali
		{{/ title}}
		{{$ content }}
			{{#tour}}
			<div class="row">
		        <div class="col-lg-12">
		            <h1 class="page-header">Editar una Experiencia</h1>
		        </div>
		    </div>
			<div class="row">
		    	<div class="col-lg-12">
		        	<div class="panel panel-default">
		            	<div class="panel-heading">
		                	Editar Experiencia
		            	</div>
		            	<div class="panel-body">
		                	<div class="row">
		                    	<div class="col-lg-12">
		                        	<form role="form" action="/panel/tour/edit/{{id}}" method="post" name="editTour" enctype="multipart/form-data">
		                            	<div class="form-group"> 
		                                	<input class="form-control" name="titulo" value="{{title}}">
		                            	</div>
		                            	<div class="form-group"> 
		                                	<input type="file"name="thumbnail">
									        <span class="help-block">Imagen en tama침o THUMBNAIL (000px*000px)</span>
									        <img src="/assets/img/experience/indo/{{thumbnail}}" height="250px" width="250px"/>
		                            	</div>
		                            	<div class="form-group">
		                            		<label>Tipo Actual:</label>
		                            		{{type}}
		                            		<br>
		                            		<label>Tipo:</label>
		                            		<select class="form-control" name="tipo">
		                            			<option value=""></option>
		                            			<option value="RECOMMENDED TOURS">RECOMMENDED TOURS</option>
		                            			<option value="HALF DAY TOURS">HALF DAY TOURS</option>
		                            			<option value="FULL DAY TOURS">FULL DAY TOURS</option>
		                            		</select>
		                            	</div>
		                            	<div class="form-group">
		                            		<label>Duraci칩n Actual:</label>
		                            		{{duration}}
		                            		<br>
		                            		<label>Duraci칩n:</label>
		                            		<select class="form-control" name="duracion">
		                            			<option value=""></option>
		                            			<option value="HALF DAY ">HALF DAY</option>
		                            			<option value="FULL DAY ">FULL DAY</option>
		                            		</select>
		                            	</div>
		                            	<div class="form-group">
		                            		<label>Horas:</label>
		                            		<input type="number" class="form-control" placeholder="Horas" name="horas">
		                            	</div>
		                            	<div class="form-group">
											<label>Descripci칩n:</label>
											<textarea class="form-control" name="descripcion" style="height: auto;">{{description}}</textarea>
		                            	</div>
		                            	<div class="form-group"> 
		                            		<label>Transfer:</label>
											<textarea class="form-control" name="Transfer">{{transfer}}</textarea>
		                            	</div>
		                            	<input type="submit" class="btn btn-primary" value="Guardar">
		                        	</form>
		                    	</div>
		                	</div>
		                	<!-- /.row (nested) -->
		            	</div>
		            	<!-- /.panel-body -->
		        	</div>
		        	<!-- /.panel -->
		    	</div>
		    <!-- /.col-lg-12 -->
			</div>
			{{/tour}}
		{{/ content}}
		{{$ footerscripts }}
		{{/ footerscripts }}
	{{/ admin }}