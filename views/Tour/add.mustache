{{% BLOCKS }}
	{{< admin }}
		{{$ title}}
			Agregar Experiencia - Bali
		{{/ title}}
		{{$ content }}
		<div id="page-content-wrapper">
            <div class="container-fluid">
				<div class="row">
			        <div class="col-lg-12">
			            <h1 class="page-header">Experiencia</h1>
			        </div>
			    </div>
			    
				<div class="row">
			    	<div class="col-lg-12">
			        	<div class="panel panel-default">
			            	<div class="panel-heading">
			                	Agregar Experiencia
			            	</div>
			            	<div class="panel-body">
			                	<div class="row">
			                    	<div class="col-lg-12">
			                        	<form role="form" action="/panel/tour/add" method="post" name="newTour" enctype="multipart/form-data" class="form-horizontal">
			                        		<div class="form-group">
          										<label class="control-label col-sm-3" for="titulo">Título:</label>
          										<div class="col-sm-8">
            										<input class="form-control" placeholder="Título" name="titulo">
          										</div>
        									</div>
        									<div class="form-group">
          										<label class="control-label col-sm-3" for="thumbnail">Thumbnail:</label>
          										<div class="col-sm-8">
            										<input type="file"name="thumbnail">
										        	<span class="help-block">Imagen en tamaño THUMBNAIL (000px*000px)</span>
          										</div>
        									</div>
        									<div class="form-group">
          										<label class="control-label col-sm-3" for="tipo">Tipo:</label>
          										<div class="col-sm-8">
            										<select class="form-control" name="tipo">
			                            				<option value="RECOMMENDED TOURS">RECOMMENDED TOURS</option>
			                            				<option value="HALF DAY TOURS">HALF DAY TOURS</option>
			                            				<option value="FULL DAY TOURS">FULL DAY TOURS</option>
			                            			</select>
          										</div>
        									</div>
			                            	<div class="form-group">
          										<label class="control-label col-sm-3" for="thumbnail">Duración:</label>
          										<div class="col-sm-8">
            										<select class="form-control" name="duracion">
			                            				<option value="HALF DAY">HALF DAY</option>
			                            				<option value="FULL DAY">FULL DAY</option>
			                            			</select>
          										</div>
        									</div>
        									<div class="form-group">
          										<label class="control-label col-sm-3" for="thumbnail">Horas:</label>
          										<div class="col-sm-8">
            										<input type="number" class="form-control" placeholder="Horas" name="horas">
          										</div>
        									</div>
        									<div class="form-group">
          										<label class="control-label col-sm-3" for="thumbnail">Descripción:</label>
          										<div class="col-sm-8">
            										<textarea class="form-control" name="descripcion">
												</textarea>
          										</div>
        									</div>
        									<div class="form-group">
          										<label class="control-label col-sm-3" for="thumbnail">Transfer:</label>
          										<div class="col-sm-8">
            										<textarea class="form-control" name="Transfer"></textarea>
          										</div>
        									</div>
        									<div class="form-group"> 
    											<div class="col-sm-offset-8 col-sm-8">
      												<input type="submit" class="btn btn-primary enviar" value="Guardar">   	
											    </div>
											</div>
			                        	</form>
			                    	</div>
			                	</div>
		                	</div>
		                </div>
		            </div>
		        </div>
		    </div>
		</div>
		{{/ content}}
		{{$ footerscripts }}
		{{/ footerscripts }}
	{{/ admin }}