{{% BLOCKS }}
	{{< mail}}
		{{$ header}}
			<img style="width: 100%;" src="http://lozano.travel/bali/assets/img/correo/Datos-de-contacto_eng.jpg">
        {{/ header}}
        {{$ content}}
        	<tr style="height: 124px;">
                <td>
                    <p style="padding: 0 0 20px; margin: 0 50px; text-align: left; color: #707070; font-size: 13px; border-bottom: 0px solid #dadada;"> 
                        <br><br><br>
                        <span style="color: #af841d; font-size: 15px;">Nombre:</span> {{#data}}{{name}}{{/data}}<br><br><br>
                        <span style="color: #af841d; font-size: 15px;">Email:</span> {{#data}}{{email}}{{/data}}<br><br><br>
                        <span style="color: #af841d; font-size: 15px;">Mensaje:<br></span> {{#data}}{{message}}{{/data}}<br><br><br>
                    </p>
                </td>
            </tr>
        {{/ content}}
	{{/ mail}}
