{{% BLOCKS }}
	{{< quirk }}
		{{$ title}}
            Add Hotel Transfer
        {{/ title}}
        {{$ content }}
    		<div class="contentpanel">
    			<ol class="breadcrumb breadcrumb-quirk">
			        <li><a href=""><i class="fa fa-home mr5"></i>Transfer</a></li>
			        <li class="active">Add Hotel Transfer</li>
      			</ol>
    			<div class="row">
    				<div class="col-md-10 col-md-offset-1">
	        			<div class="panel">
	        				<div class="panel-heading">
	        					<h4 class="panel-title">Add Hotel Transfer</h4>
	          					<p>Please fill the next form, thanks.</p>
	        				</div>
		        			<div class="panel-body">
		        				<hr>			
		        				<form class="form-horizontal" action="/admin_lozano/panel/transfer/addHotel" method="post" name="newHotel" enctype="multipart/form-data" class="form-horizontal">
		        					<div class="form-group">
		                    			<label class="col-sm-3 control-label">Hotel: <span class="text-danger">*</span></label>
		                    			<div class="col-sm-6">
		                      				<select name="hotel" class="form-control">
				                            	<option value="">Pick a Hotel:</option>
				                            	{{#hotel}}
				                            		<option value="{{idhotel}}" style=" text-transform: uppercase;">{{name}}</option>
												{{/hotel}}
											</select>
		                    			</div>
		                  			</div>
		                  			<div class="form-group">
		                    			<label class="col-sm-3 control-label">Content: <span class="text-danger">*</span></label>
		                    			<div class="col-sm-12">
		                      				<textarea name="content" id="contn"  placeholder="content" required hidden="true"/></textarea>
		                      				<div id="summernote">

		                      				</div>
		                    			</div>
		                  			</div>
		                  			<hr>
		                  			<div class="row">
	                    				<div class="col-sm-9 col-sm-offset-8">
					                      <button class="btn btn-success btn-quirk btn-wide mr5">Save</button>
	                    				</div>
	                  				</div>
		        				</form>
		        			</div>
	        			</div>
        			</div>
    			</div>	
    		</div>
        {{/ content }}
		{{$ scripts }}
		<link href="http://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.1/summernote.css" rel="stylesheet">
		<script src="http://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.1/summernote.js"></script>
		<script type="text/javascript">
			$(document).ready(function() {
			  $('#summernote').summernote({
			  	airMode: true,
			  	airPopover: [
				    // [groupName, [list of button]]
				    ['style', ['bold', 'italic', 'underline' , 'link']]
				  ],
				callbacks: {
				    onChange: function (contents, $editable) {
						console.log(contents) ;
		                $("#contn").val(contents);
		            }
				  }
			  });
			});



		</script>
		{{/ scripts }}
	{{/ quirk }}