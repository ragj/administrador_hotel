{{% BLOCKS }}
	{{< quirk }}
		{{$ title}}
            Edit Transfer Detail
        {{/ title}}
        {{$ content }}
    		<div class="contentpanel">
    			<ol class="breadcrumb breadcrumb-quirk">
			        <li><a href=""><i class="fa fa-home mr5"></i>Transfer</a></li>
			        <li class="active">Edit Transfer Detail</li>
      			</ol>
    			<div class="row">
    				<div class="col-md-10 col-md-offset-1">
	        			<div class="panel">
	        				<div class="panel-heading">
	        					<h4 class="panel-title">Transfer Detail Form</h4>
	          					<p>Please fill the next form, thanks.</p>
	        				</div>
		        			<div class="panel-body">
		        				<hr>			
		        				<form class="form-horizontal" action="/bali/panel/transfer/editDetail/{{transferDetail.idtransferDetail}}" method="post" name="newHotel"  class="form-horizontal">
		        					<div class="form-group">
		                    			<label class="col-sm-3 control-label">Transfer Block:</label>
		                    			<div class="col-sm-6">
		                      				<select class="form-control" name="tb">
			                            		<option value=""></option>
			                            		{{# transferBlock }}
			                            			<option value="{{idTransferBlock}}">{{TransferBlockTitle}}</option>
			                            		{{/ transferBlock }}
			                            	</select>
		                   				</div>
		                  			</div>
		                  			{{# transferDetail }}
		        					<div class="form-group">
		                    			<label class="col-sm-3 control-label">Description: <span class="text-danger">*</span></label>
		                    			<div class="col-sm-6">
		                      				<input type="text" name="desc" class="form-control" placeholder="Write the transfer's detail description."  value="{{description}}" required />
		                    			</div>
		                  			</div>
		                  			<div class="form-group">
		                    			<label class="col-sm-3 control-label">Spanish Description: <span class="text-danger">*</span></label>
		                    			<div class="col-sm-6">
		                      				<input type="text" name="descesp" class="form-control" placeholder="Write the transfer's spanish detail description." value="{{description_esp}}"required />
		                    			</div>
		                  			</div>
		                  			{{/ transferDetail }}
		                  			<div class="row">
	                    				<div class="col-sm-9 col-sm-offset-8">
					                      <button class="btn btn-success btn-quirk btn-wide mr5">Save</button>
	                    				</div>
	                  				</div>
		        				</form>
		        				<hr>
		        				<div class="form-group">
			                    	<label class="col-sm-3 control-label">New Value:</label>
			                    	<div class="col-sm-6">
			                    		<a href="/bali/panel/transfer/addValue" target="_blank"><button type="button" class="btn btn-success btn-quirk btn-wide mr5">New Value</button></a>	
			                   		</div>
			                  	</div>
			                  	<br>
			                  	<br>
		        				<hr>
								<br>
		        				<div class="table-responsive">
		        					 <table id="dataTable1" class="table table-bordered table-striped-col">
		        					 	<thead>
							                <tr>
							                  <th>Id</th>
							                  <th>Value</th>
							                  <th>Edit</th>
							                  <th>Delete</th>
							                </tr>
              							</thead>
							            <tfoot>
											<tr>
											  <th>Id</th>
							                  <th>Value</th>
							                  <th>Edit</th>
							                  <th>Delete</th>
							                </tr>
							            </tfoot>
							            <tbody>
							            	{{# transferDetail.transferValue }}
							            		<tr>
							            			<td>
							            				{{idtransferValues}}
							            			</td>
							            			<td>
							            				{{val}}
							            			</td>
							            			<td>
							            				<a href="/bali/panel/transfer/editValue/{{idtransferValues}}">
			                                                <button type="button" class="btn btn-primary">
			                                                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Edit
			                                                </button>
			                                            </a>
							            			</td>
							            			<td>
										            	<a onclick="myFunction({{idtransferValues}})">
			                                                <button type="button" class="btn btn-danger">
			                                                	<span class="glyphicon glyphicon-trash" aria-hidden="true"></span> Delete
			                                                </button>
			                                            </a>
										          	</td>
							            		</tr>
							            	{{/ transferDetail.transferValue }}
							            </tbody>
		        					 </table>
		        				</div>
		        				<script>
		                            function myFunction(id) {
		                                if (confirm("Estas Seguro de Eliminar?") == true) {
		                                    self.location = "/bali/panel/transfer/deleteValue/"+id; 
		                                } 
		                            }
		                        </script>
		        			</div>
	        			</div>
        			</div>
    			</div>	
    		</div>
        {{/ content }}
		{{$ scripts }}
		{{/ scripts }}
	{{/ quirk }}