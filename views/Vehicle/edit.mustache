{{% BLOCKS }}
	{{< quirk }}
		{{$ title}}
            Edit Vehicle
        {{/ title}}
        {{$ content }}
    		<div class="contentpanel">
    			<ol class="breadcrumb breadcrumb-quirk">
			        <li><i class="fa fa-home mr5"></i>Vehicles</li>
			        <li class="active">Edit Vehicle</li>
      			</ol>
    			<div class="row">
    				<div class="col-md-10 col-md-offset-1">
	        			<div class="panel">
	        				<div class="panel-heading">
	        					<h4 class="panel-title">Vehicle Form</h4>
	          					<p>Please fill the next form. Thanks.</p>
	        				</div>
		        			<div class="panel-body">
		        				<div class="tabs">
							 		<a href="javascript:void(0);" class="actve" onclick="changeTab( this , '.detail' )">
							 			<button type="button" class="btn btn-primary">
                                        	<span class="glyphicon" aria-hidden="true"></span> GENERAL
                                    	</button>
							 		</a>
							 		<a href="javascript:void(0);"  id="visits" onclick="changeTab( this , '.visits' )">
							 			<button type="button" class="btn btn-primary">
                                        	<span class="glyphicon" aria-hidden="true"></span> PASSENGERS
                                    	</button>
							 		</a>
							 	</div>
		        				<hr>
		        				<div class="detail ttrl">			
			        				<form class="form-horizontal" action="/bali/panel/vehicles/edit/{{#car}}{{idVehicle}}{{/car}}" method="post" name="newUser" class="form-horizontal">
			        					<div class="form-group">
			                    			<label class="col-sm-3 control-label">First Name: <span class="text-danger">*</span></label>
			                    			<div class="col-sm-6">
			                      				<input type="text" name="car" class="form-control" placeholder="Write the car name." value="{{#car}}{{name}}{{/car}}" required/>
			                    			</div>
			                  			</div>
			                  			<div class="form-group">
			                    			<label class="col-sm-3 control-label">Description: <span class="text-danger">*</span></label>
			                    			<div class="col-sm-6">
			                      				<textarea name="description" class="form-control" placeholder="Write the car name."  required>{{#car}}{{description}}{{/car}}</textarea>
			                    			</div>
			                  			</div>
			                  			<div class="form-group">
			                    			<label class="col-sm-3 control-label">Spanish Description:<span class="text-danger">*</span></label>
			                    			<div class="col-sm-6">
			                      				<textarea name="spanish" class="form-control" placeholder="Write the car name." required>{{#car}}{{description_esp}}{{/car}}</textarea>
			                    			</div>
			                  			</div>
			                  			<hr>
			                  			<div class="row">
		                    				<div class="col-sm-9 col-sm-offset-8">
						                      <button class="btn btn-success btn-quirk btn-wide mr5">Save</button>
		                    				</div>
		                  				</div>
		                  				<hr>
			                  			<div class="form-group">
			                    			<label class="col-sm-3 control-label">New Image:</label>
			                    			<div class="col-sm-6">
			                    				<a href="/bali/panel/vehicles/addImages"><button type="button" class="btn btn-success btn-quirk btn-wide mr5">New Image</button></a>	
			                   				</div>
			                  			</div>
			        				</form>
		        				</div>
		        				<div class="visits ttrl">
		        					<div class="table-responsive">
			        					 <table id="dataTable1" class="table table-bordered table-striped-col">
			        					 	<thead>
								                <tr>
								                  <th>Vehicle</th>
								                  <th>Minimum</th>
								                  <th>Maximum</th>
								                  <th>Edit</th>
								                  <th>Delete</th>
								                </tr>
	              							</thead>
								            <tfoot>
												<tr>
								                  <th>Vehicle</th>
								                  <th>Minimum</th>
								                  <th>Maximum</th>
								                  <th>Edit</th>
								                  <th>Delete</th>
								                </tr>
								            </tfoot>
								            <tbody>
								            	{{# car }}
								            		{{# passengers }}
								            			<tr>
								            				<td>{{car.name}}</td>
								            				<td>{{np_initial}}</td>
								            				<td>{{np_final}}</td>
								            				<td>
										            			<a href="/bali/panel/vehicles/editPass/{{id}}">
		                                                            <button type="button" class="btn btn-warning">
		                                                                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Edit
		                                                            </button>
		                                                        </a>
                                                    		</td>
                                                    		<td>
										            			<a onclick="myFunction1({{id}})">
		                                                            <button type="button" class="btn btn-danger">
		                                                                <span class="glyphicon glyphicon-trash" aria-hidden="true"></span> Delete
		                                                            </button>
		                                                        </a>
								            				</td>
								            			</tr>
								            		{{/ passengers }}
								            	{{/ car }}
								            </tbody>
			        					 </table>
			        				</div>
		        					<hr>
		        					<a href="javascript:void(0);"  onclick="show(this)">
							 			<button type="button" class="btn btn-primary">
                                        	<span class="glyphicon" aria-hidden="true"></span> ADD
                                    	</button>
							 		</a>
							 		<div class="formPass">
							 			<hr>
							 			<form class="form-horizontal" action="/bali/panel/vehicles/addPass/{{#car}}{{idVehicle}}{{/car}}" method="post"  class="form-horizontal">
							 				<div class="form-group">
				                    			<label class="col-sm-3 control-label">Minimum<span class="text-danger">*</span></label>
				                    			<div class="col-sm-6">
				                      				<input type="text" name="min" class="form-control" placeholder="Write minium number of passengers."  required/>
				                    			</div>
			                  				</div>
			                  				<div class="form-group">
				                    			<label class="col-sm-3 control-label">Maximum</label>
				                    			<div class="col-sm-6">
				                      				<input type="text" name="max" class="form-control" placeholder="Write minium number of passengers."/>
				                    			</div>
			                  				</div>
			                  				<hr>
				                  			<div class="row">
			                    				<div class="col-sm-9 col-sm-offset-8">
							                      <button class="btn btn-success btn-quirk btn-wide mr5">Save</button>
							                      <a href="javascript:void(0);"  onclick="hide(this)">
							 						<button type="button" class="btn btn-primary">
                                        				<span class="glyphicon" aria-hidden="true"></span> Cancel
                                    				</button>
							 					</a>
			                    				</div>
			                  				</div>	
							 			</form>
							 		</div>
		        				</div>
		        			</div>
	        			</div>
        			</div>
    			</div>
    			<div class="row">
    				{{# car}}
	    				{{# images }}
							<div class="col-md-3">
	          					<div class="panel">
	            					<div class="panel-heading">
	              						<h4 class="panel-title">Image </h4>
	            					</div>
	            					<div class="panel-body">
	              						<img src="/bali/assets/img/car/{{vehicle_idVehicle}}/{{path}}" class="img-rounded " width="270" height="150" >
						                <a href="/bali/panel/vehicles/editImages/{{idvehicleImages}}"><button type="button" class="btn btn-success btn-quirk"><i class="fa fa-pencil"></i></button></a>
						                <a onclick=myFunction({{idvehicleImages}})><button type="button" class="btn btn-danger btn-quirk"><i class="fa fa-times"></i></button></a>
	            					</div>
	          					</div>
	  						</div>
	        			{{/ images }}
	        		{{/car}}
	        		<script>
						function myFunction(id) {
                            if (confirm("Estas Seguro de Eliminar?") == true) {
                                self.location = "/bali/panel/vehicles/deleteImages/"+id; 
                            } 
                        }
                        function myFunction1(id) {
                            if (confirm("Estas Seguro de Eliminar?") == true) {
                                self.location = "/bali/panel/vehicles/deletePass/"+id; 
                            } 
                        }
                    </script>
    			</div>	
    		</div>
        {{/ content }}
		{{$ scripts }}
			<script>
				function changeTab( e , classe ){
					jQuery(".tabs a.actve").removeClass("actve");
					jQuery(e).addClass("actve");
					jQuery(".ttrl").fadeOut(100,function(){
						setTimeout(function(){jQuery(classe).fadeIn();} , 100);
					});
				}
				function show(e){
					$(".formPass").fadeIn();
				}
				function hide(e){
					$(".formPass").fadeOut();
				}
			</script>
		{{/ scripts }}
	{{/ quirk }}