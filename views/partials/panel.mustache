{{% BLOCKS }}
<!DOCTYPE html>
<html>
    <head>
        <title>
            {{$ title}}
            Luna framework
            {{/ title}}
        </title>
        <meta charset="UTF-8">
        <link rel="stylesheet" type="text/css" href="/assets/css/main.css">
        <link rel="stylesheet" type="text/css" href="/assets/css/bootstrap/bootstrap.min.css">
        <link rel="stylesheet" type="text/css" href="/assets/css/bootstrap/ie10-viewport-bug-workaround.css">
        <link rel="stylesheet" type="text/css" href="/assets/css/bootstrap/dashboard.css">        
    </head>
    <body>
        <nav class="navbar navbar-inverse navbar-fixed-top">
            <div class="container-fluid">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="#">Essilor</a>
                </div>
                <div id="navbar" class="navbar-collapse collapse">
                    <ul class="nav navbar-nav navbar-right">
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
                                {{user.nombre}} <span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li id="logout"><a href="#"><span class="glyphicon glyphicon-log-out" aria-hidden="true"></span>Logout</a></li>
                            </ul>
                        </li>                        
                    </ul>
                </div>
            </div>
        </nav>
        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-3 col-md-2 sidebar">
                    <ul class="nav nav-sidebar">
                        {{#user.menu}}
                        <li>
                            <a href="{{ruta}}" class=" {{class}}">{{label}}</a>
                            <ul>
                                {{#sub}}
                                <li>
                                   <a href="{{ruta}}" class=" {{class}}">{{label}}</a>
                                </li>
                                {{/sub}}
                            </ul>
                        </li>
                        {{/user.menu}}                       
                    </ul>
                </div>
                <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
                    {{$alert}}
                    {{# alert }}
                    <div class="alert {{ class }} fade in">
                        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                        <strong class="status">{{ status }}</strong>  {{ message }}
                    </div>
                    {{/ alert }}
                    {{/ alert }}

                    {{$ content }}

                    {{/ content}}
                </div>
            </div>
        </div>
        <div id="footer">
            <script src="/assets/js/bootstrap/ie-emulation-modes-warning.js"></script>
            <script src="/assets/js/jquery.min.js"></script>
            <script src="/assets/js/bootstrap/bootstrap.min.js"></script>
            <script src="/assets/js/bootstrap/holder.min.js"></script>
            <script src="/assets/js/bootstrap/ie10-viewport-bug-workaround.js"></script>
            <script src="/assets/js/bootstrap/ie10-viewport-bug-workaround.js"></script>
            <script src="/assets/js/bootstrap/jquery.bootpag.min.js"></script>
            <script src="/assets/js/purl.js"></script>
            <script src="/assets/js/main.js"></script>            
            {{$ footerscripts}}
            {{/ footerscripts}}
        </div>
    </body>
</html>